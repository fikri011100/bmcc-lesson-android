<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/logogojek"
        android:layout_marginTop="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/caption_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PICK A SERVICE"
        android:textSize="24sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logo"/>

    <ImageView
        android:id="@+id/image_gosend"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:src="@drawable/gosend"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="50dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/caption_logo"/>

    <TextView
        android:id="@+id/text_gosend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GO-SEND"
        app:layout_constraintTop_toBottomOf="@+id/image_gosend"
        app:layout_constraintLeft_toLeftOf="@+id/image_gosend"
        app:layout_constraintRight_toRightOf="@+id/image_gosend"/>

    <ImageView
        android:id="@+id/image_gofood"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:src="@drawable/gofood"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="50dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_gosend"/>

    <TextView
        android:id="@+id/text_gofood"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GO-SEND"
        app:layout_constraintTop_toBottomOf="@+id/image_gofood"
        app:layout_constraintLeft_toLeftOf="@+id/image_gofood"
        app:layout_constraintRight_toRightOf="@+id/image_gofood"/>

</androidx.constraintlayout.widget.ConstraintLayout>